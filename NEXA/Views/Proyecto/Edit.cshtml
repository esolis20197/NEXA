@model NEXA.Models.Proyecto

@{
    ViewData["Title"] = "Editar Proyecto";
}

<div class="container py-4">
    <div class="card shadow-sm p-4">
        <h4 class="text-center mb-4">@ViewData["Title"]</h4>
        <hr />
        <form asp-action="Edit" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <!-- Nombre -->
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input class="form-control" value="@Model.Nombre" disabled />
                <input type="hidden" asp-for="Nombre" />
            </div>

            <!-- Fechas -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FechaInicio" class="form-label"></label>
                    <input class="form-control" type="date" value="@Model.FechaInicio.ToString("yyyy-MM-dd")" disabled />
                    <input type="hidden" asp-for="FechaInicio" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="FechaFin" class="form-label"></label>
                    <input class="form-control" type="date" value="@Model.FechaFin.ToString("yyyy-MM-dd")" disabled />
                    <input type="hidden" asp-for="FechaFin" />
                </div>
            </div>

            <!-- Descripción -->
            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <textarea class="form-control" rows="3" disabled>@Model.Descripcion</textarea>
                <input type="hidden" asp-for="Descripcion" />
            </div>

            <!-- Fotos -->
            <div class="mb-3">
                <label asp-for="Fotos" class="form-label"></label>
                <input class="form-control" value="@Model.Fotos" disabled />
                <input type="hidden" asp-for="Fotos" />
            </div>

            <!-- Usuario -->
            <div class="mb-3">
                <label asp-for="UsuarioID" class="form-label"></label>
                <select class="form-select" disabled>
                    <option selected>@ViewBag.NombreUsuario</option>
                </select>
                <input type="hidden" asp-for="UsuarioID" />
            </div>

            <!-- Requiere documentos -->
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="RequiereDocumentos" />
                <label class="form-check-label" asp-for="RequiereDocumentos">
                    ¿Requiere documentos de instalación?
                </label>
            </div>


            <!-- Estado editable -->
            <div class="mb-3">
                <label asp-for="estado" class="form-label"></label>
                <select asp-for="estado" class="form-select">
                    <option value="">-- Estado del proyecto --</option>
                    <option value="Pendiente">Pendiente</option>
                    <option value="Iniciado">Iniciado</option>
                    <option value="En proceso">En proceso</option>
                    <option value="Finalizado">Finalizado</option>
                    <option value="Cancelado">Cancelado</option>
                </select>
                <span asp-validation-for="estado" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Volver al listado</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
