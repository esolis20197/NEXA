@model NEXA.Models.Citas

@{
    ViewData["Title"] = "Detalles de la Cita";
}

<div class="container py-4">
    <div class="card shadow-sm p-4">
        <h4 class="text-center mb-4">@ViewData["Title"]</h4>
        <hr />
        <div class="card-body">
            <!-- Información del Usuario -->
            <div class="mb-4">
                <h6 class="fw-bold">Información del Usuario</h6>
                <div class="row">
                    <div class="col-md-4">
                        <p><strong>Nombre:</strong> @Model.Usuario?.NombreCompleto</p>
                    </div>
                    <div class="col-md-4">
                        <p><strong>Correo:</strong> @Model.Usuario?.Correo</p>
                    </div>
                    <div class="col-md-4">
                        <p><strong>Teléfono:</strong> @Model.Usuario?.Telefono</p>
                    </div>
                </div>
            </div>

            <!-- Información de la Cita -->
            <div class="mb-3">
                <h6 class="fw-bold">Detalles de la Cita</h6>
                <div class="row mb-2">
                    <div class="col-md-6">
                        <strong>Nombre:</strong> @Model.NombreCita
                    </div>
                    <div class="col-md-6">
                        <strong>Tipo de Cita:</strong> @Model.TipoCita
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-md-6">
                        <strong>Encargado:</strong> @Model.Encargado
                    </div>
                    <div class="col-md-6">
                        <strong>Producto:</strong> @Model.ProducConsulta
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-md-6">
                        <strong>Teléfono:</strong> @Model.NumeroTelefonico
                    </div>
                    <div class="col-md-6">
                        <strong>Dirección:</strong> @Model.Direccion
                    </div>
                </div>

                <div class="mb-2">
                    <strong>Detalles:</strong>
                    <div class="border rounded p-2 bg-light">
                        @Model.Detalles
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <strong>Fecha:</strong> @Model.FechaCita.ToString("dd/MM/yyyy HH:mm")
                    </div>
                    <div class="col-md-6">
                        <strong>Estado:</strong> @Model.Estado
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-white border-top-0">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-2">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
        </div>
    </div>
</div>
