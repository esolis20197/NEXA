@model NEXA.Models.Inventario

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container py-4">
    <div class="card shadow-sm p-4">
        <h4 class="text-center mb-4">@ViewData["Title"]</h4>
        <hr />
        <form asp-action="Edit" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="FotoUrl" class="form-label"></label>
                <input asp-for="FotoUrl" class="form-control" placeholder="URL de la imagen" />
                <span asp-validation-for="FotoUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Nombre del producto" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripción"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Precio" class="form-label"></label>
                    <input asp-for="Precio" class="form-control" type="number" step="0.01" placeholder="Precio" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Stock" class="form-label"></label>
                    <input asp-for="Stock" class="form-control" type="number" placeholder="Stock disponible" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="tipo" class="form-label"></label>
                <input asp-for="tipo" class="form-control" placeholder="Tipo de producto" />
                <span asp-validation-for="tipo" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Volver al listado</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
