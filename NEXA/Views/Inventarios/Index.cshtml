@model IEnumerable<NEXA.Models.Inventario>

@{
    ViewData["Title"] = "Inventario";
}

<h1>Inventario</h1>

<!-- BOTÓN CREAR -->
<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle me-1"></i> Crear nuevo producto
</a>

<!-- BUSQUEDA -->
<div class="mb-3">
    <label for="searchInput" class="form-label">Buscar</label>
    <input type="text" id="searchInput" class="form-control" placeholder="Buscar por nombre, descripción o tipo">
</div>

<!-- TABLA -->
<table id="tablaInventario" class="table align-middle mb-0 bg-white table-striped">
    <thead class="bg-light">
        <tr>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Tipo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var stockClase = item.Stock < 10 ? "table-danger" : "";
            <tr class="@stockClase">
                <td>
                    <img src="@item.FotoUrl" alt="Imagen de @item.Nombre" style="max-width: 100px; max-height: 100px;" />
                </td>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@item.Precio.ToString("C")</td>
                <td>
                    @item.Stock
                    @if (item.Stock < 10)
                    {
                        <span class="text-danger ms-1"><i class="bi bi-exclamation-triangle-fill"></i> Bajo</span>
                    }
                </td>
                <td>@item.tipo</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" title="Editar">
                        <i class="bi bi-pencil m-1"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" title="Detalles">
                        <i class="bi bi-eye m-1"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" title="Eliminar">
                        <i class="bi bi-trash m-1"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- SCRIPTS -->
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <script>
        $(document).ready(function () {
            const table = $('#tablaInventario').DataTable({
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json"
                },
                responsive: true,
                paging: true,
                info: false,
                searching: true,
                ordering: true,
                dom: 'tp'
            });

            $('#searchInput').on('keyup', function () {
                table.search(this.value).draw();
            });
        });
    </script>
}
