@model List<NEXA.Models.ReporteHistorial>

@{
    ViewData["Title"] = "Reportes";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-3">
    <h1 class="mb-2 mb-md-0">@ViewData["Title"]</h1>
</div>

<div class="container py-4">
    <div class="row g-4 mb-5">

        <!-- Inventario -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-custom-blue">
                <div class="card-header bg-custom-blue">
                    <h5 class="mb-0">Inventario</h5>
                </div>
                <div class="card-body d-flex flex-column justify-content-center gap-3">
                    <a class="btn btn-success w-100" href="@Url.Action("ExcelInventario", "Reportes")">
                        <i class="bi bi-file-earmark-excel"></i> Descargar Excel
                    </a>
                    <a class="btn btn-danger w-100" href="@Url.Action("PdfInventario", "Reportes")">
                        <i class="bi bi-file-earmark-pdf"></i> Descargar PDF
                    </a>
                </div>
            </div>
        </div>

        <!-- Usuarios -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-custom-blue">
                <div class="card-header bg-custom-blue">
                    <h5 class="mb-0">Usuarios (Empleados)</h5>
                </div>
                <div class="card-body d-flex flex-column justify-content-center gap-3">
                    <a class="btn btn-success w-100" href="@Url.Action("ExcelUsuarios", "Reportes")">
                        <i class="bi bi-file-earmark-excel"></i> Descargar Excel
                    </a>
                    <a class="btn btn-danger w-100" href="@Url.Action("PdfUsuarios", "Reportes")">
                        <i class="bi bi-file-earmark-pdf"></i> Descargar PDF
                    </a>
                </div>
            </div>
        </div>

        <!-- Pedidos -->
        <!-- Pedidos -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-custom-blue">
                <div class="card-header bg-custom-blue">
                    <h5 class="mb-0">Pedidos</h5>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="Todos" asp-controller="Reportes" class="mb-3">
                        <div class="row g-2 align-items-end">
                            <div class="col-12">
                                <label class="form-label fw-semibold">Filtrar por fecha:</label>
                            </div>
                            <div class="col-6">
                                <label for="desdePedido" class="form-label">Desde</label>
                                <input type="date" id="desdePedido" name="desdePedido" value="@(ViewData["desdePedido"] ?? "")" class="form-control" />
                            </div>
                            <div class="col-6">
                                <label for="hastaPedido" class="form-label">Hasta</label>
                                <input type="date" id="hastaPedido" name="hastaPedido" value="@(ViewData["hastaPedido"] ?? "")" class="form-control" />
                            </div>
                            <div class="col-12 text-end">
                                <button type="submit" class="btn btn-primary mt-2">Filtrar</button>
                            </div>
                        </div>
                    </form>

                    <div class="d-flex justify-content-between">
                        <a class="btn btn-success w-100 me-1"
                           href="@Url.Action("ExcelPedidos", "Reportes", new { desde = ViewData["desdePedido"], hasta = ViewData["hastaPedido"] })">
                            <i class="bi bi-file-earmark-excel"></i> Excel
                        </a>
                        <a class="btn btn-danger w-100 ms-1"
                           href="@Url.Action("PdfPedidos", "Reportes", new { desde = ViewData["desdePedido"], hasta = ViewData["hastaPedido"] })">
                            <i class="bi bi-file-earmark-pdf"></i> PDF
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Citas -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-custom-blue">
                <div class="card-header bg-custom-blue">
                    <h5 class="mb-0">Citas</h5>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="Todos" asp-controller="Reportes" class="mb-3">
                        <div class="row g-2 align-items-end">
                            <div class="col-12">
                                <label class="form-label fw-semibold">Filtrar por fecha:</label>
                            </div>
                            <div class="col-6">
                                <label for="desdeCita" class="form-label">Desde</label>
                                <input type="date" id="desdeCita" name="desdeCita" value="@(ViewData["desdeCita"] ?? "")" class="form-control" />
                            </div>
                            <div class="col-6">
                                <label for="hastaCita" class="form-label">Hasta</label>
                                <input type="date" id="hastaCita" name="hastaCita" value="@(ViewData["hastaCita"] ?? "")" class="form-control" />
                            </div>
                            <div class="col-12 text-end">
                                <button type="submit" class="btn btn-primary mt-2">Filtrar</button>
                            </div>
                        </div>
                    </form>

                    <div class="d-flex justify-content-between">
                        <a class="btn btn-success w-100 me-1"
                           href="@Url.Action("ExcelCitas", "Reportes", new { desde = ViewData["desdeCita"], hasta = ViewData["hastaCita"] })">
                            <i class="bi bi-file-earmark-excel"></i> Excel
                        </a>
                        <a class="btn btn-danger w-100 ms-1"
                           href="@Url.Action("PdfCitas", "Reportes", new { desde = ViewData["desdeCita"], hasta = ViewData["hastaCita"] })">
                            <i class="bi bi-file-earmark-pdf"></i> PDF
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Proyectos -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-custom-blue">
                <div class="card-header bg-custom-blue">
                    <h5 class="mb-0">Proyectos</h5>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="Todos" asp-controller="Reportes" class="mb-3">
                        <div class="row g-2 align-items-end">
                            <div class="col-12">
                                <label class="form-label fw-semibold">Filtrar por fecha:</label>
                            </div>
                            <div class="col-6">
                                <label for="desdeProyecto" class="form-label">Desde</label>
                                <input type="date" id="desdeProyecto" name="desdeProyecto" value="@(ViewData["desdeProyecto"] ?? "")" class="form-control" />
                            </div>
                            <div class="col-6">
                                <label for="hastaProyecto" class="form-label">Hasta</label>
                                <input type="date" id="hastaProyecto" name="hastaProyecto" value="@(ViewData["hastaProyecto"] ?? "")" class="form-control" />
                            </div>
                            <div class="col-12 text-end">
                                <button type="submit" class="btn btn-primary mt-2">Filtrar</button>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-success w-100 me-1" href="@Url.Action("ExcelProyectos", "Reportes", new { desde = ViewData["desdeProyecto"], hasta = ViewData["hastaProyecto"] })">
                            <i class="bi bi-file-earmark-excel"></i> Excel
                        </a>
                        <a class="btn btn-danger w-100 ms-1" href="@Url.Action("PdfProyectos", "Reportes", new { desde = ViewData["desdeProyecto"], hasta = ViewData["hastaProyecto"] })">
                            <i class="bi bi-file-earmark-pdf"></i> PDF
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Gastos -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-custom-blue">
                <div class="card-header bg-custom-blue">
                    <h5 class="mb-0">Gastos</h5>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="Todos" asp-controller="Reportes" class="mb-3">
                        <div class="row g-2 align-items-end">
                            <div class="col-12">
                                <label class="form-label fw-semibold">Filtrar por fecha:</label>
                            </div>
                            <div class="col-6">
                                <label for="desdeGasto" class="form-label">Desde</label>
                                <input type="date" id="desdeGasto" name="desdeGasto" value="@(ViewData["desdeGasto"] ?? "")" class="form-control" />
                            </div>
                            <div class="col-6">
                                <label for="hastaGasto" class="form-label">Hasta</label>
                                <input type="date" id="hastaGasto" name="hastaGasto" value="@(ViewData["hastaGasto"] ?? "")" class="form-control" />
                            </div>
                            <div class="col-12 text-end">
                                <button type="submit" class="btn btn-primary mt-2">Filtrar</button>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-success w-100 me-1" href="@Url.Action("ExcelGastos", "Reportes", new { desde = ViewData["desdeGasto"], hasta = ViewData["hastaGasto"] })">
                            <i class="bi bi-file-earmark-excel"></i> Excel
                        </a>
                        <a class="btn btn-danger w-100 ms-1" href="@Url.Action("PdfGastos", "Reportes", new { desde = ViewData["desdeGasto"], hasta = ViewData["hastaGasto"] })">
                            <i class="bi bi-file-earmark-pdf"></i> PDF
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cuentas por Pagar -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-custom-blue">
                <div class="card-header bg-custom-blue">
                    <h5 class="mb-0">Cuentas por Pagar</h5>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="Todos" asp-controller="Reportes" class="mb-3">
                        <div class="row g-2 align-items-end">
                            <div class="col-12">
                                <label class="form-label fw-semibold">Filtrar por fecha:</label>
                            </div>
                            <div class="col-6">
                                <label for="desdeCuenta" class="form-label">Desde</label>
                                <input type="date" id="desdeCuenta" name="desdeCuenta" value="@(ViewData["desdeCuenta"] ?? "")" class="form-control" />
                            </div>
                            <div class="col-6">
                                <label for="hastaCuenta" class="form-label">Hasta</label>
                                <input type="date" id="hastaCuenta" name="hastaCuenta" value="@(ViewData["hastaCuenta"] ?? "")" class="form-control" />
                            </div>
                            <div class="col-12 text-end">
                                <button type="submit" class="btn btn-primary mt-2">Filtrar</button>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-success w-100 me-1" href="@Url.Action("ExcelCuentasPorPagar", "Reportes", new { desde = ViewData["desdeCuenta"], hasta = ViewData["hastaCuenta"] })">
                            <i class="bi bi-file-earmark-excel"></i> Excel
                        </a>
                        <a class="btn btn-danger w-100 ms-1" href="@Url.Action("PdfCuentasPorPagar", "Reportes", new { desde = ViewData["desdeCuenta"], hasta = ViewData["hastaCuenta"] })">
                            <i class="bi bi-file-earmark-pdf"></i> PDF
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cierre de Caja -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-custom-blue">
                <div class="card-header bg-custom-blue">
                    <h5 class="mb-0">Cierre Financiero</h5>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="Cierre" asp-controller="Reportes" class="mb-3">
                        <div class="row g-2 align-items-end">
                            <div class="col-12">
                                <label class="form-label fw-semibold">Filtrar por fecha:</label>
                            </div>
                            <div class="col-6">
                                <label for="desdeCierre" class="form-label">Desde</label>
                                <input type="date" id="desdeCierre" name="desde" value="@(ViewData["desdeCierre"] ?? "")" class="form-control" />
                            </div>
                            <div class="col-6">
                                <label for="hastaCierre" class="form-label">Hasta</label>
                                <input type="date" id="hastaCierre" name="hasta" value="@(ViewData["hastaCierre"] ?? "")" class="form-control" />
                            </div>
                            <div class="col-12 text-end">
                                <button type="submit" class="btn btn-primary mt-2">Filtrar</button>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-success w-100 me-1" href="@Url.Action("ExcelCierre", "Reportes", new { desde = ViewData["desdeCierre"], hasta = ViewData["hastaCierre"] })">
                            <i class="bi bi-file-earmark-excel"></i> Excel
                        </a>
                        <a class="btn btn-danger w-100 ms-1" href="@Url.Action("PdfCierre", "Reportes", new { desde = ViewData["desdeCierre"], hasta = ViewData["hastaCierre"] })">
                            <i class="bi bi-file-earmark-pdf"></i> PDF
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Historial de reportes -->
    <div class="card shadow-sm border-custom-blue mb-5">
        <div class="card-header bg-custom-blue">
            <h5 class="mb-0">Historial de Reportes Generados (Últimos 20)</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Count > 0)
            {
                <div style="max-height: 180px; overflow-y: auto;" class="table-responsive">
                    <table class="table table-striped table-bordered align-middle mb-0">
                        <thead class="table-light sticky-top bg-white">
                            <tr>
                                <th>Tipo de Reporte</th>
                                <th>Filtros Aplicados</th>
                                <th>Fecha de Generación</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TipoReporte</td>
                                    <td>@item.FiltrosAplicados</td>
                                    <td>@item.FechaGeneracion.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">No hay historial de reportes aún.</p>
            }
        </div>
    </div>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["Alerta"] != null)
    {
        <script>
            Swal.fire({
                icon: 'warning',
                title: 'Sin datos',
                text: '@TempData["Alerta"]',
                confirmButtonColor: '#0d6efd'
            });
        </script>
    }

</div>

<!-- Bootstrap Icons CDN para los iconos de Excel y PDF -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />