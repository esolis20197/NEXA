@model NEXA.Models.Usuario

@{
    ViewData["Title"] = "Mi Perfil";
}
@using Microsoft.AspNetCore.Http
@{
    var usuarioNombre = Context.Session.GetString("UsuarioNombre");
    var usuarioRol = Context.Session.GetString("UsuarioRol");
    var usuarioId = Context.Session.GetString("UsuarioId");
}

<h1>Mi Perfil</h1>

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">

            <!-- IMAGEN -->
            <div class="col-md-6">
                <img class="card-img-top mb-5 mb-md-0 rounded" src="https://images.pexels.com/photos/17309932/pexels-photo-17309932/free-photo-of-ciudad-techo-urbano-esfera.jpeg?auto=compress&cs=tinysrgb&w=600" alt="..." style="width: 400px; height: 500px" />
            </div>
            
            <div class="col-md-6">
                <div class="card shadow-lg p-4">
                    <!-- Informacion del Usuario -->
                    <h4 class="text-center">@Model.NombreCompleto</h4>
                    <p><strong>Usuario:</strong> @Model.NombreUsuario</p>
                    <p><strong>Correo:</strong> @Model.Correo</p>
                    <p><strong>Cédula:</strong> @Model.Cedula</p>
                    <p><strong>Teléfono:</strong> @Model.Telefono</p>
                    @if (usuarioRol == "Administrador" || usuarioRol == "Empleado" || usuarioRol == "Usuario")
                    {
                        <p><strong>Rol:</strong> @Model.Rol</p>
                    }
                    
                    <a class="btn btn-primary mt-3" asp-action="EditUsuario" asp-route-id="@Model.Id"><i class="bi bi-pencil-square me-1"></i> Editar Perfil</a>
                </div>
                </div>
            </div>
        </div>
</section>