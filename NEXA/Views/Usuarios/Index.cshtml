@model IEnumerable<NEXA.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h1>Usuarios</h1>

<!-- BOTÓN CREAR -->
<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle me-1"></i> Crear nuevo usuario
</a>

<!-- BUSQUEDA -->
<div class="mb-3">
    <label for="searchInput" class="form-label">Buscar</label>
    <input type="text" id="searchInput" class="form-control" placeholder="Buscar por nombre completo, correo o cédula">
</div>

<!-- TABLA -->
<table id="tablaUsuarios" class="table align-middle mb-0 bg-white table-striped">
    <thead class="bg-light">
        <tr>
            <th>Usuario</th>
            <th>Nombre completo</th>
            <th>Correo</th>
            <th>Cédula</th>
            <th>Teléfono</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NombreUsuario</td>
                <td>@item.NombreCompleto</td>
                <td>@item.Correo</td>
                <td>@item.Cedula</td>
                <td>@item.Telefono</td>
                <td>@item.Rol</td>
                <td>
                    <!-- BOTONES -->
                    <a asp-action="Edit" asp-route-id="@item.Id" title="Editar">
                        <i class="bi bi-pencil m-1"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" title="Detalles">
                        <i class="bi bi-eye m-1"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" title="Eliminar">
                        <i class="bi bi-trash m-1"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- SCRIPTS -->
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <script>
        $(document).ready(function () {
            const table = $('#tablaUsuarios').DataTable({
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json"
                },
                responsive: true,
                paging: true,
                info: false,
                searching: true,
                ordering: true,
                dom: 'tp'
            });

            $('#searchInput').on('keyup', function () {
                table.search(this.value).draw();
            });
        });
    </script>
}
