@model NEXA.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container py-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-sm p-4">
        <h4 class="mb-3">Editar Usuario</h4>
        <form asp-action="Edit" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="NombreUsuario" class="form-label"></label>
                <input asp-for="NombreUsuario" class="form-control" placeholder="Nombre de usuario" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NombreCompleto" class="form-label"></label>
                <input asp-for="NombreCompleto" class="form-control" placeholder="Nombre completo" />
                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Correo" class="form-label"></label>
                <input asp-for="Correo" class="form-control" placeholder="Correo electrónico" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Cedula" class="form-label"></label>
                <input asp-for="Cedula" class="form-control" placeholder="Cédula" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Telefono" class="form-label"></label>
                <input asp-for="Telefono" class="form-control" placeholder="Teléfono" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Contraseña" class="form-label"></label>
                <input asp-for="Contraseña" class="form-control" type="password" placeholder="Contraseña" />
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Rol" class="form-label"></label>
                <select asp-for="Rol" class="form-select">
                    <option value="">-- Selecciona un rol --</option>
                    <option value="Administrador">Administrador</option>
                    <option value="Empleado">Empleado</option>
                    <option value="Usuario">Usuario</option>
                </select>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Volver al listado</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
