@model NEXA.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container py-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <h3>¿Está seguro que desea eliminar este usuario?</h3>

    <div class="card shadow-sm p-4" style="max-width: 600px;">
        <h4 class="mb-3">Detalles del Usuario</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NombreUsuario)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreUsuario)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NombreCompleto)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreCompleto)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Correo)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Correo)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Cedula)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Cedula)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Telefono)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

            <dt class="col-sm-3">Contraseña</dt>
            <dd class="col-sm-9">******</dd> <!-- No mostrar contraseña real -->

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Rol)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Rol)</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Volver al listado</a>
        </form>
    </div>
</div>
