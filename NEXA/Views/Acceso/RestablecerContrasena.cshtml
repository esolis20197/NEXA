@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<div class="d-flex justify-content-center mt-5 mb-5 px-3">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px;">
        <h2 class="text-center mb-4">Restablecer Contraseña</h2>
        <form method="post">
            <input type="hidden" name="token" value="@ViewData["Token"]" />

            <div class="mb-3">
                <label class="form-label">Nueva contraseña</label>
                <input type="password" name="nuevaContrasena" class="form-control form-control-sm" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Confirmar nueva contraseña</label>
                <input type="password" name="confirmarContrasena" class="form-control form-control-sm" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">Restablecer</button>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="text-danger mt-3">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
        </form>
    </div>
</div>
